# ======================
# AnkiFlow Environment Variables
# ======================
# Copy this file to .env and fill in the values

# ======================
# Application
# ======================
APP_NAME=AnkiFlow
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# ======================
# API Configuration
# ======================
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000"]

# ======================
# Database (PostgreSQL + pgvector)
# ======================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ankiflow
POSTGRES_PASSWORD=ankiflow_dev
POSTGRES_DB=ankiflow

# ======================
# Embedding Configuration
# ======================
# Vector dimension - OpenAI text-embedding-3-small: 1536
EMBEDDING_DIM=1536
EMBEDDING_MODEL=text-embedding-3-small

# ======================
# OpenAI API
# ======================
OPENAI_API_KEY=sk-c32b514c8bf346c3bbb77efa0bd7a718

# ======================
# Search API (optional)
# ======================
SERPER_API_KEY=your-serper-api-key-here

# ======================
# Logging
# ======================
LOG_LEVEL=INFO
LOG_FORMAT=console

# ======================
# Frontend (Next.js)
# ======================
# Public variables must be prefixed with NEXT_PUBLIC_
NEXT_PUBLIC_API_URL=http://localhost:8000/api
